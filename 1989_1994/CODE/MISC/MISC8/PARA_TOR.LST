        IF BTST(col_dat|,l)
          x&(0)=xe&(p,l,c)
          y&(0)=ye&(p,l,c)
          x&(1)=xe&(p,l+1,c)
          y&(1)=ye&(p,l+1,c)
          x&(2)=xe&(p,l+1,(c+1) MOD col)
          y&(2)=ye&(p,l+1,(c+1) MOD col)
          x&(3)=xe&(p,l,(c+1) MOD col)
          y&(3)=ye&(p,l,(c+1) MOD col)
          POLYFILL 4,x&(),y&()
        ENDIF
      NEXT l
    NEXT c
    '
    l_test=0
