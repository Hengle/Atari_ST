PROCEDURE fin
  ON BREAK CONT
  ON ERROR
  mf=MFREE(im_dat%)
  IF mf<0
    PRINT "Erreur lib‚ration bloc 640 Ko."
    END
  ENDIF
  ON BREAK
  RESERVE FRE(0)+658000-256
RETURN
'
PROCEDURE sauve_forme
  ON BREAK CONT
  LOCAL e%,nom$,p,i,l
  INPUT "Sauvegarde(o/n): ";nom$
  IF nom$="o"
    e%=XBIOS(2)
    PRINT
    INPUT "Nom du fichier : ";nom$
    nom$="a:\"+nom$
    OPEN "o",#1,nom$
    FOR p=0 TO pas-1
      FOR i=0 TO col-1
        FOR l=0 TO lig-1
          DPOKE e%,xe&(p,l,i)
          DPOKE e%+2,ye&(p,l,i)
          BPUT #1,e%,4
        NEXT l
      NEXT i
      FOR l=0 TO lig-1
        DPOKE e%,xe&(p,l,0)
        DPOKE e%+2,ye&(p,l,0)
        BPUT #1,e%,4
      NEXT l
    NEXT p
    PRINT LOF(#1)
    CLOSE #1
  ENDIF
  ON BREAK
  PAUSE 10
RETURN
